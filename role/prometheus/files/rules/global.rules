---
groups:
  - name: global
    rules:
      - alert: ExporterDown
        annotations:
          summary: Exporter down (instance {{ $labels.instance }})
          descriptions: |-
            Prometheus exporter down
            VALUE = {{ $value }}
        expr: up{instance=~".*homelab.lan"} == 0
        for: 1m
        labels:
          severity: warning
