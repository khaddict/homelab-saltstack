---
groups:
  - name: global
    rules:
      - alert: ExporterDown
        annotations:
          summary: Exporter down (instance {{ $labels.instance }})
          descriptions: |-
            Prometheus exporter down
            VALUE = {{ $value }}
        expr: node_systemd_unit_state{instance=~".*homelab.lan", name="prometheus-node-exporter.service", state="active"} == 0
        for: 1m
        labels:
          severity: warning
